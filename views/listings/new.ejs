<%-layout("/layouts/boilerplate")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h2>Add New Listing</h2>
            <form method="POST" action="/listings">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" id="title" name="title" placeholder="Add a catchy title" class="form-control">
                </div>
            
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea id="description" name="description" placeholder="enter discription" class="form-control"></textarea>
                </div>
            
                <div class="mb-3">
                    <label for="price" class="form-label">Price (in INR):</label>
                    <input type="number" id="price" name="price" placeholder="1200" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image URL:</label><br>
                    <input type="text" id="image" name="image" placeholder="enter image url" class="form-control">
                </div>
                    
                <div class="row">
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location:</label>
                        <input type="text" id="location" name="location" placeholder="Jaipur, Rajasthan" class="form-control">
                    </div>
                
                    <div class="mb-3 col-md-4">
                        <label for="country" class="form-label">Country:</label>
                        <input type="text" id="country" name="country" placeholder="India" class="form-control">
                    </div>
                </div>
                <button class="btn btn-dark add-btn">Create Listing</button><br><br>
            </form>
        </div>
    </div>
</body>
</html>
</body>
</html>