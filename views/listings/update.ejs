<%-layout("/layouts/boilerplate")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h2>Edit Listing</h2>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" id="title" name="title" value="<%= listing.title %>" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea id="description" name="description" class="form-control"><%= listing.description %></textarea>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price (in INR):</label>
                    <input type="number" id="price" name="price" value="<%= listing.price %>" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image URL:</label>
                    <input type="text" id="image" name="image" value="<%= listing.image%>" class="form-control">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location:</label>
                        <input type="text" id="location" name="location" value="<%= listing.location %>" class="form-control">
                    </div>

                    <div class="mb-3 col-md-4">
                        <label for="country" class="form-label">Country:</label>
                        <input type="text" id="country" name="country" value="<%= listing.country %>" class="form-control">
                    </div>
                </div>

                <button type="submit" class="btn btn-dark add-btn">Update Listing</button><br><br>
            </form>
        </div>
    </div>
</body>
</html>